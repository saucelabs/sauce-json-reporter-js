{
  "name": "@saucelabs/sauce-json-reporter",
  "version": "3.1.0",
  "description": "A library for creating test results in the Sauce Labs JSON format.",
  "main": "lib/index.js",
  "exports": {
    ".": "./lib/index.js"
  },
  "types": "lib/index.d.ts",
  "files": [
    "lib/**"
  ],
  "scripts": {
    "build": "node scripts/rmdir.js lib && tsc",
    "lint": "eslint src/",
    "test": "jest",
    "release": "tsc && release-it --github.release",
    "release:ci": "tsc && npm run release -- --ci --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major"
  },
  "author": "<devx@saucelabs.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.13.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.2",
    "@types/jest": "29.5.5",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "babel-jest": "29.7.0",
    "eslint": "8.51.0",
    "jest": "29.7.0",
    "json-schema-library": "9.1.2",
    "release-it": "16.2.1",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  }
}
